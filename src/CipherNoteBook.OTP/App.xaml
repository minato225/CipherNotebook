<Application
    x:Class="CipherNoteBook.OTP.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:viewmodels="clr-namespace:CipherNoteBook.OTP.ViewModels"
    xmlns:views="clr-namespace:CipherNoteBook.OTP.Views">
    <Application.Resources>
        <ResourceDictionary>
            <DataTemplate DataType="{x:Type viewmodels:LoginViewModel}">
                <views:LoginView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type viewmodels:HomeViewModel}">
                <views:HomeView />
            </DataTemplate>
        </ResourceDictionary>
    </Application.Resources>
</Application>
